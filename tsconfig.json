{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build",
    "sourceMap": true,
    "declaration": true,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "genDir": "compiled"
  },  
  "include": [
    "src/*.ts",
    "src/app/**/*.ts",
    "src/speech/action/*.ts",
    "src/speech/base/*.ts",
    "src/speech/bot/*.ts",
    "src/speech/const/*.ts",
    "src/speech/intent/*.ts",
    "src/speech/listen/*.ts",
    "src/speech/nuance/*.ts",
    "src/speech/speak/*.ts",
    "src/speech/*.ts",
  ],
  "exclude": [
    "examples",
    "node_modules"
  ]
}
